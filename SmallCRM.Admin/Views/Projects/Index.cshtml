@model IEnumerable<SmallCRM.Admin.Models.ProjectViewModel>

@{
    ViewBag.Title = "Projeler";
}

<h2>Projeler</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Proje</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Managers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BussinessAnalyists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItemStatus)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>Eylemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Managers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BussinessAnalyists)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Developers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkItemStatus)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td nowrap>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) 
                    @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) 
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
